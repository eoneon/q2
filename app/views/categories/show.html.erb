<h1>Category#Show: <%= @category.name %></h1>

<p><%= link_to "Edit: #{@category.name}", edit_category_path(@category) %> | <%= link_to "Return to Category List", categories_path %></p><br>

<h4>Create New Item Field</h4>
<p><%= link_to "New Field", new_category_item_field_path(@category) %></p>
<p><% @category.item_fields %></p>
<table class="table table-striped table-hover">
  <thead>
    <th>Field name</th>
    <th>Field type</th>
  </thead>

  <tbody>
    <% @category.item_fields.each do |item_field| %>
      <tr>
        <td><%= link_to item_field.field_name, category_item_field_path(@category, item_field) %></td>
        <td><%= item_field.field_type %></td>
      </tr>
    <% end %>
  </tbody>
</table>
