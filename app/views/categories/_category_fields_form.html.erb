<%= form_for [@category, ItemField.new] do |f| %>
  <div class="form-row">
    <div class="field">
      <%= f.label :field_name %><br>
      <%= f.text_field :field_name, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :field_type %><br>
      <%= f.text_field :field_type, class: "form-control" %>
    </div>

  </div>
  <%= f.submit "Save", class: "btn pull-right" %>
<% end %>
